{
  "ui": {
    "title": "CVD Tracker",
    "refresh_rate_ms": 1000,
    "dark_mode": true
  },
  "sensors": [
    {
      "sen001": {
        "name": "MockSensor1",
        "type": "temperature",
        "source": "mock_arduino_tc_board",
        "interface": "serial",
        "enabled": true,
        "show_on_dashboard": true,
        "port": "COM3",
        "channel": 0,
        "poll_interval_ms": 1000,
        "baudrate": 9600,
        "timeout": 2.0
      }
    }
  ],
  "webcams": [
    {
      "Built-in Camera": {
        "name": "Built-in Camera",
        "device_index": 0,
        "resolution": [
          640,
          480
        ],
        "fps": 30,
        "rotation": 0,
        "uvc_settings": {
          "brightness": 255,
          "contrast": 100,
          "saturation": 64
        }
      }
    }
  ],
  "controllers": [
    {
      "con001": {
        "name": "blablinbuln",
        "type": "motion_detection",
        "enabled": true,
        "show_on_dashboard": true,
        "algorithm": [
          "bubble_detection"
        ],
        "state_output": [
          "Keine Bewegung erkannt",
          "Bewegung erkannt"
        ],
        "parameters": {
          "cam_id": "Built-in Camera",
          "sensitivity": 0.5,
          "min_area": 500,
          "background_learning_rate": 0.01,
          "noise_threshold": 25
        }
      }
    }
  ],
  "algorithms": [
    {
      "sen004_filter_1": {
        "name": "Moving Average for Mock4",
        "type": "filtering",
        "enabled": true,
        "settings": {
          "class": "MovingAverageFilter",
          "parameters": {
            "window_size": 7.0
          }
        }
      }
    },
    {
      "sen004_filter_2": {
        "name": "Range Validation for Mock4",
        "type": "filtering",
        "enabled": true,
        "settings": {
          "class": "RangeValidationFilter",
          "parameters": {
            "min_value": 10.0,
            "max_value": 100.0
          }
        }
      }
    },
    {
      "sen004_filter_3": {
        "name": "Outlier Detection for Mock4",
        "type": "filtering",
        "enabled": true,
        "settings": {
          "class": "OutlierDetectionFilter",
          "parameters": {
            "threshold_std": 2.0,
            "min_samples": 10
          }
        }
      }
    }
  ]
}