{
  "version": "0.0.1",
  "ui": {
    "title": "CVD Tracker", 
    "dark_mode": true,
    "refresh_rate_ms": 500,
    "liveplot":{
      "plot_max_points": 2000,
      "sample_rate": 20,    
      "history_seconds" : 3600 
    }
  },

  "network": {
    "host": "0.0.0.0",
    "port": 8080,
    "enable_https": false
  },

  "logging": {
    "level": "INFO",
    "log_dir": "data/logs",
    "log_file_rotation_mb": 10,
    "retention_days": 30
  },

  "data_storage": {
   "storage_paths": {
      "base": "data",
      "logs": "data/logs",
      "raw": "data/raw",
      "processed": "data/processed",
      "cache": "data/cache",
      "experiments": {
         "base": "data/experiments",
         "results": {
            "raw": "raw",
            "processed": "processed"
         }
      }
   },
    "compression": {
      "enabled": true,
      "algorithm": "gzip",
      "level": 5
    },
    "file_rotation": {
      "enabled": true,
      "max_size_mb": 100,
      "max_age_days": 7
    },
    "flush_interval": 10
  },

  "experiment": {
    "auto_zip": true,
    "naming_pattern": "%Y-%m-%dT%H-%M-%S",
    "state_output": ["Experiment fehlgeschlagen", "Experiment l√§uft erfolgreich"]
  },

  "thread_pool": {
    "auto_scale": true,
    "min_workers": 1,
    "max_workers": 4
  },

  "process_pool": {
    "max_workers": 2,
    "task_timeout_s": 60
  },
  "controller_concurrency_limit": 10,
  "controller_manager": {
    "processing_interval_ms": 30
  },
  "monitoring": {
    "prometheus_exporter": true,
    "heartbeat_interval_ms": 1000,
    "watchdog_restart": true
  },

  "alerting": {
    "email_recipient": "admin@example.com",
    "smtp_host": "smtp.example.com",
    "smtp_port": 587,
    "smtp_user": "user",
    "smtp_password": "pass",
    "critical_state_timeout_s": 60
  },

  "security": {
    "auth_required": false,
    "users": [
      {
        "username": "admin",
        "password_hash": "<bcrypt>"
      }
    ],
    "csrf_protection": true
  },

  "webcams": [
    {
      "cam001": {
        "name": "Default Webcam",
        "device_index": 0,
        "resolution": [640, 480],
        "fps": 30,
        "rotation": 0,
        "uvc": {
          "brightness": 128,
          "hue": 0,
          "contrast": 32,
          "saturation": 64,
          "sharpness": 3,
          "gamma": 100,
          "white_balance_auto": true,
          "gain": 0,
          "backlight_comp": 0,
          "exposure_auto": true
        }
      }
    }
  ],

  "sensors": [
    {
      "temp001": {
        "name": "Reaktor-PT100",
        "type": "temperature",
        "interface": "serial",
        "source": "arduino_tc_board",
        "port": "COM3",
        "channel": 0,
        "poll_interval_ms": 200,
        "algorithm": ["alg001"],
        "state_output": ["Sensor konnte nicht gelesen werden","Sensor ok"],
        "enabled": true
        } 
    },

    {
      "temp002": {
        "name": "Reaktor-PT100",
        "type": "temperature",
        "interface": "serial",
        "source": "rs232",
        "port": "COM4",
        "channel": 0,
        "poll_interval_ms": 200,
        "algorithm": ["alg001"],
        "state_output": ["Sensor konnte nicht gelesen werden","Sensor ok"],
        "enabled": true
        }
    }
  ],

  "controllers": [
    {
      "con001":{
        "name": "Webcam-Top",
        "type": "camera_capture",
        "interface": "usb_camera",
        "device_index": 0,
        "settings": {
          "resolution": [1280, 720],
          "fps": 30
        },
        "algorithm": ["bubble_detection"],
        "state_output": ["Keine Bewegung erkannt", "Bewegung erkannt"],
        "enabled": true
        }
    },

    {
      "motion_detection": {
        "name": "Motion Detection",
        "type": "motion_detection",
        "parameters": {
          "cam_id": "cam001",
          "algorithm": "MOG2",
          "learning_rate": 0.01
        },
        "enabled": true
      }
    },

    {
      "con002":{
        "name": "CVD-Status",
        "type": "reactor_state",
        "algorithm": ["alg003"],
        "state_output": ["Reaktor Fehler", "Reaktor OK"],
        "enabled": true
        }
    }
  ],

  "filters": [
    {
      "id": "filt001",
      "name": "Outlier-Filter",
      "type": "median",
      "window": 5,
      "apply_to": ["temp001"],
      "enabled": true
    }
  ],

  "algorithms": [
    {
      "alg001":{
        "name": "simple_moving_average",
        "type": "smoothing",
        "settings": {
          "window_size": 5
        },
        "enabled": true
      }
    },

    {
      "alg002": {
        "name": "bubble_detection",
        "type": "motion_detection",
        "settings": {
          "threshold": 0.1,
          "min_area": 500,
          "max_area": 5000,
          "sensitivity": 0.5
        },
        "enabled": true
      }
    },

    {
      "alg003": {
        "name": "reactor_status_detection",
        "type": "state_detection",
        "settings": {
          "idle_temp_max": 35.0,
          "heating_temp_min": 40.0,
          "processing_temp_min": 80.0,
          "processing_temp_max": 150.0,
          "alarm_temp_max": 200.0,
          "alarm_temp_min": 0.0,
          "max_temp_gradient": 50.0,
          "min_sensor_count": 1,
          "min_state_duration": 5.0,
          "confidence_threshold": 0.7,
          "motion_required_for_processing": true,
          "motion_alarm_threshold": 30.0,
          "max_sensor_age": 10.0,
          "min_valid_sensors":  1
        },
        "enabled": true
      }
    }
  ]
}